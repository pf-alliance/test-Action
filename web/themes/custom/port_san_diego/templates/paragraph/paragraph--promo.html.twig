{% extends 'paragraph.html.twig' %}
{#
/**
 * @file
 * Theme override for a field.
 */
#}
{% block content %}
  <section class="promo">
    <div class="promo__container">
      <div class="promo__content">
        {% if topic_white_logo %}
          <div class="promo__topic-logo">
            {{ topic_white_logo }}
          </div>
        {% else %}
          {% if content.field_title %}
            <h3 class="promo__heading">
              {{ content.field_title }}
            </h3>
          {% endif %}
        {% endif %}
        {% if content.field_body %}
          <div class="promo__text">
            {{ content.field_body }}
          </div>
        {% endif %}
        {% if location %}
          <p class="promo__location">
            <svg class="icon icon--location" alt="location icon">
              <use xlink:href="#icon-location"></use>
            </svg>
            {{ location }}
          </p>
        {% endif %}
      </div>
      {% if content.field_image %}
        <div class="promo__img">
          {{ content.field_image }}
        </div>
      {% endif %}
    </div>
  </section>
{% endblock %}
