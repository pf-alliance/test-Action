{#
/**
 * @file
 * Theme override for a main view template.
 */
#}
{%
  set classes = [
    'view',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if title %}
    {{ title }}
  {% endif %}
  {{ title_suffix }}
  {% if header %}
    <div class="view-header">
      {{ header }}
    </div>
  {% endif %}
  {% if attachment_before %}
    <div class="attachment attachment-before">
      {{ attachment_before }}
    </div>
  {% endif %}

  <div class="search__items">
    <div class="search__container">
      {% if exposed %}
        <div class="search__filters-wrapper view-filters">
          <div class="search__filters">
            <span class="search__filters-title">Filter:</span>
            {{ exposed }}
          </div>
        </div>
      {% endif %}
      {% if rows %}
        <h4 class="search__count">{{ 'Showing :t Result:p'|t({':t': total, ':p': plural}) }}</h4>
        <div class="search__results content__featured">
          {{ rows }}
        </div>
      {% elseif empty %}
        <div class="view-empty">
          {{ empty }}
        </div>
      {% endif %}
    </div>

    {% if pager %}
      <div class="pagination__row">
        <div class="pagination__container">
          {{ pager }}
        </div>
      </div>
    {% endif %}
  </div>

  {% if attachment_after %}
    <div class="attachment attachment-after">
      {{ attachment_after }}
    </div>
  {% endif %}
  {% if more %}
    {{ more }}
  {% endif %}
  {% if footer %}
    <div class="view-footer">
      {{ footer }}
    </div>
  {% endif %}
</div>
