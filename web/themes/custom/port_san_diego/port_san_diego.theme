      foreach ($image_styles as $key => $image_style) {
        $styles[] = ImageStyle::load($image_style)->buildUrl($file->getFileUri()) . ' ' . $key;
      }

      if (isset($styles) && count($styles)) {
        $vars['width'] = $image_source->getMetadata($field_image, 'width');
